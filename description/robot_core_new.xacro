<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/> 

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.275 0 0"/>  <!-- origin behind bse link -->
    </joint>

    <link name="chassis">
        <visual>  <!-- สร้างแบบจำลองที่เห็นในโปรแกรม -->
            <origin xyz="0.17 0 0.3625"/>  <!-- ตั้ง origin ใหม่ -->
            <geometry>
                <box size="0.34 0.34 0.725"/>  <!-- size in meter -->
            </geometry>
            <material name="white"/>  <!-- set color to white-->
        </visual>
        <collision>  <!-- สร้างแบบจำลองที่เห็นในโปรแกรม -->
            <origin xyz="0.17 0 0.3625"/>  <!-- ตั้ง origin ใหม่ -->
            <geometry>
                <box size="0.34 0.34 0.725"/>  <!-- size in meter -->
            </geometry>
        </collision>
        <xacro:inertial_box mass="25" x="0.34" y="0.34" z="0.725">
            <origin xyz="0.17 0 0.3625" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.2 0" rpy="-${pi/2} 0 0" />  <!-- rpy ใช้สั่งให้แกน origin หมุน-->
        <axis xyz="0 0 1"/>  <!-- ตั้งแกนในการเคลื่อนที่ของล้อเป็น +z -->
    </joint>
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.075" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.075" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.04" radius="0.15">
            <origin xzy="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name="rightwheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.2 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/> 
    </joint>
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.075" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.075" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.04" radius="0.15">
            <origin xzy="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.075 0 0"/>
    </joint>


    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.075"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.075"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.5" radius="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

</robot>